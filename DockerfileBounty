FROM python:3.6.5

RUN mkdir /usr/src/bounty
WORKDIR /usr/src/bounty

RUN apt-get update && apt install -y libsecp256k1-dev

COPY ./bounty ./bounty
COPY ./tools   ./tools
COPY ./database   ./database
RUN pip install --no-cache-dir -r ./bounty/requirements.txt

ENV PYTHONPATH="/usr/src/bounty"
CMD [ "python", "./bounty/bounty_agent.py" ]


